	"drivers": [{
		"id": "pioneer",
		"name": {
			"en": "Pioneer",
			"nl": "Pioneer"
		},
		"images": {
			"large": "drivers/pioneer/assets/images/large.jpg",
			"small": "drivers/pioneer/assets/images/small.jpg"
		},
		"class": "amplifier",
		"capabilities": ["onoff", "volume_set", "volume_mute", "volume_up", "volume_down", "pioneer_source"],
		"capabilitiesOptions": {
			"volume_set": {
				"min": 0,
				"max": 73,
				"step": 1.0
			}
		},
		"mobile": {
			"components": [{
				"id": "toggle",
				"options": {
					"showTitle": true
				},
				"capabilities": ["onoff"]
			}, {
				"id": "slider",
				"options": {
					"showTitle": true
				},
				"capabilities": ["volume_set"]
			}, {
				"id": "picker",
				"options": {
					"showTitle": true
				},
				"capabilities": ["pioneer_source"]
			}]
		},
		"pair": [{
			"id": "start"
		}, {
			"id": "list_devices",
			"template": "list_devices",
			"navigation": {
				"next": "add_amplifier"
			}
		}, {
			"id": "add_amplifier",
			"template": "add_devices"
		}],
		"settings": [{
			"type": "group",
			"label": {
				"en": "Amplifier settings",
				"nl": "Versterker instellingen"
			},
			"children": [{
				"id": "ip",
				"type": "text",
				"label": {
					"en": "IP address of your Pioneer",
					"nl": "IP adres van de Pioneer"
				},
				"value": ""
			}, {
				"id": "telnetPort",
				"type": "number",
				"label": {
					"en": "Telnet port of your Pioneer",
					"nl": "Telnet poort van de Pioneer"
				},
				"value": 8102,
				"attr": {
					"min": 1,
					"max": 65535
				}
			}]
		}, {
			"type": "group",
			"label": {
				"en": "Calibrate maximum volume",
				"nl": "Kalibreer maximale volume"
			},
			"children": [{
				"id": "volumeMultiplier",
				"type": "text",
				"label": {
					"en": "WARNING! Turn OFF your music! When this field is empty your Homey will, on save, get the maximum volume of your Pioneer.",
					"nl": "WAARSCHUWING! Zet de muziek UIT! Wanneer de gegevens hiernaast leeg zijn zal Homey, bij het opslaan, het maximale volume van uw Pioneer ophalen."
				},
				"value": ""
			}]
		}]
