		"triggers": [{
			"id": "source",
			"title": {
				"en": "Input is changed",
				"nl": "Ingang is veranderd"
			},
			"tokens": [{
				"name": "source",
				"type": "string",
				"title": {
					"en": "Input",
					"nl": "Ingang"
				},
				"example": {
					"en": "TV",
					"nl": "TV"
				}
			}],
			"args": [{
				"name": "device",
				"type": "device",
				"filter": "driver_id=pioneer"
			}]
		}],
		"conditions": [{
			"id": "powerOnOff",
			"title": {
				"en": "Amplifier is !{{on|off}}",
				"nl": "Versterker is !{{aan|uit}}"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				}
